@model ScheduleViewModel
@{
    ViewData["Title"] = "View";
}
    <form asp-action="Edit" method="post">
        <h6>View</h6>
        <div class="row">
            <div class="col-md-4">
                Date
            </div>
            <div class="col-md-8">
                @Html.HiddenFor(x => x.Appoinment.Id)
                @Html.DisplayFor(x => x.Appoinment.Date)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                Capacity
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(x => x.Appoinment.Capacity)
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                Confirmation
            </div>
            <div class="col-md-8">
                <select asp-for="Appoinment.Confirmation"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Confirmation>()">
                    <option>Select type ...</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-warning btn-lg float-right"
                    type="submit">
                Update
            </button>
        </div>
    </form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Weight</th>
        </tr>
    </thead>
    <tbody>
        @{int SlNo = 0;}
        @foreach (var item in Model.Passengers)
        {
            <tr>
                <th scope="row">@(SlNo += 1)</th>
                <td>@Html.DisplayFor(x => item.FirstName)</td>
                <td>@Html.DisplayFor(x => item.LastName)</td>
                <td>@Html.DisplayFor(x => item.Weight)</td>
            </tr>
        }
    <tr>
        <td colspan="2">Total Weight</td>
        <td>@Html.DisplayFor(x => Model.TotalWeight)</td>
        <td>Count :@Html.DisplayFor(x => Model.Count)</td>
    </tr>
    </tbody>
</table>

