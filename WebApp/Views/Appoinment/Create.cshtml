@model AppoinmentViewModel
    <form asp-action="Create" method="post">
        <h6 class="display-4">Create</h6>
        <div class="row">
            <div class="col-md-4">
                Date
            </div>
            <div class="col-md-8">
                <Input asp-for="Date" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                Capacity
            </div>
            <div class="col-md-8">
                <Input asp-for="Capacity" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-lg float-right"
                    type="submit">
                Submit
            </button>
        </div>
    </form>