@model List<PassengerViewModel>
@{
        ViewData["Title"] = "Home Page";
}

               <table class="table">
                   <thead>
                       <tr>
                           <th scope="col">#</th>
                           <th scope="col">First Name</th>
                           <th scope="col">Last Name</th>
                           <th scope="col">State</th>
                           <th scope="col">Action</th>

                       </tr>
                   </thead>
                   <tbody>
                       @{int SlNo = 0;}
                       @foreach (var item in Model)
                       {
                       <tr>
                           <th scope="row">@(SlNo += 1)</th>
                           <td>@Html.DisplayFor(x => item.FirstName)</td>
                           <td>@Html.DisplayFor(x => item.LastName)</td>
                           <td>@Html.DisplayFor(x => item.State)</td>
                           <td><a asp-action="View" asp-route-id="@item.Id" class="btn btn-outline">View</a></td>
                       </tr>
                       }

                   </tbody>
               </table>